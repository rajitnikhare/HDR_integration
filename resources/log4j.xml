<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd" >
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<appender name="infofile" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="DatePattern" value="'.'yyyy-MM-dd" />
		<param name="maxBackupIndex" value="50" />
		<param name="File" value="C:/HDR_logs/hdr_info.log" />
		<!-- <param name="File" value="/d11/tomcat/apache-tomcat-7.0.30/logs/CaviumIntegration/cavium_info.log" 
			/> -->
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			
			<param name="LevelMin" value="info" />
			<param name="LevelMax" value="info" />
		</filter>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{DATE} %5p %c{1}:%L - %m%n" />
		</layout>
	</appender>

	<appender name="debugfile" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="DatePattern" value="'.'yyyy-MM-dd" />
		<param name="maxBackupIndex" value="50" />
		<param name="File" value="C:/HDR_logs/hdr_debug.log" />
		<!-- <param name="File" value="/d11/tomcat/apache-tomcat-7.0.30/logs/CaviumIntegration/cavium_debug.log" 
			/> -->

		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{DATE} %5p %c{1}:%L - %m%n" />
		</layout>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			
			<param name="LevelMin" value="debug" />
			<param name="LevelMax" value="debug" />
		</filter>
	</appender>

	<appender name="debugfile" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="DatePattern" value="'.'yyyy-MM-dd" />
		<param name="maxBackupIndex" value="50" />
		<param name="File" value="C:/HDR_logs/hdr.log" />
		<!-- <param name="File" value="/d11/tomcat/apache-tomcat-7.0.30/logs/CaviumIntegration/cavium.log" 
			/> -->

		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{DATE} %5p %c{1}:%L - %m%n" />
		</layout>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMin" value="debug" />
			<param name="LevelMax" value="debug" />
		</filter>
	</appender>

	<appender name="warnfile" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="DatePattern" value="'.'yyyy-MM-dd" />
		<param name="maxBackupIndex" value="50" />
		<param name="File" value="C:/HDR_logs/hdr.log" />
		<!-- <param name="File" value="/d11/tomcat/apache-tomcat-7.0.30/logs/CaviumIntegration/cavium.log" 
			/> -->

		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{DATE} %5p %c{1}:%L - %m%n" />
		</layout>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMin" value="warn" />
			<param name="LevelMax" value="warn" />
		</filter>
	</appender>

	<appender name="errorfile" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="DatePattern" value="'.'yyyy-MM-dd" />
		<param name="maxBackupIndex" value="50" />
		<param name="File" value="C:/HDR_logs/hdr_errorlogs.log" />
		<!-- <param name="File" value="/d11/tomcat/apache-tomcat-7.0.30/logs/CaviumIntegration/cavium_errorlogs.log" 
			/> -->


		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{DATE} %5p %c{1}:%L - %m%n" />
		</layout>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMin" value="error" />
			<param name="LevelMax" value="error" />
		</filter>
	</appender>

	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{DATE} %5p %c{1}:%L - %m%n" />
		</layout>
	</appender>

	<!-- <category name="org.apache.commons.httpclient"> -->
	<!-- <priority value="debug"/> -->
	<!-- <appender-ref ref="console"/> -->
	<!-- </category> -->


	<logger name="org.apache.commons.httpclient">
		<level value="debug" />
		<appender-ref ref="debugfile" />
	</logger>
	<logger name="httpclient.wire">
		<level value="debug" />
		<appender-ref ref="debugfile" />
	</logger>
	<logger name="com.serene.crmod">
		<level value="debug" />
		<appender-ref ref="debugfile" />
	</logger>
	<logger name="com.serene.crmod.exception">
		<level value="debug" />
		<appender-ref ref="debugfile" />
	</logger>


	<logger name="com.crmod">
		<level value="debug" />
		<appender-ref ref="debugfile" />
	</logger>

	<logger name="com.test">
		<level value="debug" />
		<appender-ref ref="debugfile" />
	</logger>

	<logger name="org.hibernate">
		<level value="error" />
		<appender-ref ref="errorfile" />
	</logger>


	<logger name="org.springframework">
		<level value="error" />
		<appender-ref ref="errorfile" />
	</logger>

	<root>

		<priority value="debug" />
		<appender-ref ref="debugfile" />
		<appender-ref ref="infofile" />
		<appender-ref ref="errorfile" />
		<appender-ref ref="console" />


	</root>
</log4j:configuration>